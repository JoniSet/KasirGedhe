<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransaksiScreen.DetailTransaksiActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_struk"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimaryDark"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/putih"
            android:layout_margin="5dp">

            <LinearLayout
                android:id="@+id/L_17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="@color/putih"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="30dp"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/img_logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="monospace"
                    android:text="Roti Gembong A"
                    android:textColor="@color/hitam"
                    android:textSize="18sp"
                    android:id="@+id/txt_judul"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/txt_alamat_outlet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:fontFamily="monospace"
                    android:text="Gd. Mawar No. 01 RT. 02, Geneng, Panggungharjo, Kec. Sewon, Bantul, Daerah Istimewa Yogyakarta 55188, Indonesia"
                    android:textAlignment="center"
                    android:textColor="@color/hitam"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_notelp_outlet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="monospace"
                    android:text="897e98745984524hjhd"
                    android:textAlignment="center"
                    android:textColor="@color/hitam"
                    android:textSize="14sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="#9B9999" />

                <TextView
                    android:id="@+id/txt_order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="monospace"
                    android:text="13-07-2021"
                    android:textAlignment="center"
                    android:textColor="@color/hitam"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt_tanggal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center"
                        android:fontFamily="monospace"
                        android:text="13-07-2021"
                        android:textAlignment="center"
                        android:textColor="@color/hitam"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txt_nama_struk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:fontFamily="monospace"
                        android:text="Frandito Setyady"
                        android:textAlignment="center"
                        android:textColor="@color/hitam"
                        android:textSize="15sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt_waktu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:fontFamily="monospace"
                        android:text="13:07"
                        android:textColor="@color/hitam"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txt_nama_outlet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:fontFamily="monospace"
                        android:text="Frandito Setyady"
                        android:textAlignment="center"
                        android:textColor="@color/hitam"
                        android:textSize="15sp"
                        android:visibility="gone"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_no_antri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="monospace"
                    android:text="No.07"
                    android:textColor="@color/hitam"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="#9B9999" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list_produk_struk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="#9B9999" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="left"
                        android:fontFamily="monospace"
                        android:text="Total"
                        android:textColor="@color/hitam"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txt_total_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="left"
                        android:fontFamily="monospace"
                        android:text="30.000"
                        android:textColor="@color/hitam"
                        android:textSize="14sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt_metode_struk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="left"
                        android:fontFamily="monospace"
                        android:text="Pembayaran (Cash)"
                        android:textColor="@color/hitam"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txt_total_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="left"
                        android:fontFamily="monospace"
                        android:text="30.000"
                        android:textColor="@color/hitam"
                        android:textSize="14sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="left"
                        android:fontFamily="monospace"
                        android:text="Kembalian"
                        android:textColor="@color/hitam"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txt_kembalian_struk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="left"
                        android:fontFamily="monospace"
                        android:text="0"
                        android:textColor="@color/hitam"
                        android:textSize="14sp" />


                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:fontFamily="monospace"
                    android:text="Terimakasih atas kunjungan anda"
                    android:textColor="@color/hitam"
                    android:textSize="14sp" />
            </LinearLayout>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/loading_struk"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>