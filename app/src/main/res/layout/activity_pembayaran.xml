<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransaksiScreen.PembayaranActivity"
    android:background="@color/putih">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/L_14">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/T_total_bayar_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Total Bayar"
                android:textColor="@color/hitam"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/tutorial"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/ic_tutorial"
                app:tint="@color/colorAccent"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Rp. "
                android:textColor="@color/text"
                android:textSize="13pt"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/T_uang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text=""
                android:textColor="@color/text"
                android:textSize="13pt"
                android:layout_gravity="center"
                android:maxLength="10"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/T_nama_pel"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:maxHeight="50dp"
                android:text=""
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="@color/hitam"
                android:background="@drawable/bg_text_2"
                android:fontFamily="@font/poppins_regular"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_toLeftOf="@+id/V_4"
                android:layout_marginRight="10dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/B_nama_pel"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/V_4"
                android:background="@drawable/bg_text_2"
                android:fontFamily="@font/poppins_regular"
                android:text="Data Pelanggan"
                android:textAllCaps="false"
                android:textColor="@color/hitam"
                android:visibility="visible" />

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:id="@+id/V_4"/>

            <Button
                android:id="@+id/B_metode_bayar"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/V_4"
                android:background="@drawable/bg_text_2"
                android:fontFamily="@font/poppins_regular"
                android:text="Metode : cash"
                android:textAllCaps="false"
                android:textColor="@color/hitam" />


        </RelativeLayout>

    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/L_14"/>

</androidx.constraintlayout.widget.ConstraintLayout>