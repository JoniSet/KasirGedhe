<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/C_1"
            android:layout_centerVertical="true"
            app:cardCornerRadius="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#DADADA">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="RG"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textStyle="bold"
                    android:id="@+id/txt_kode_kategori"
                    android:textColor="@color/text" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/C_1"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/L_8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Roti Gembong Reguler"
                android:textColor="@color/hitam"
                android:textSize="16sp"
                android:fontFamily="sans-serif-condensed-medium"
                android:id="@+id/txt_nama_kategori"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Pendapatan"
                android:textColor="@color/hitam"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Rp. 140.000"
                android:textColor="@color/hitam"
                android:textSize="13sp"
                android:id="@+id/txt_pendapatan_perkategori"/>


        </LinearLayout>

        <TextView
            android:id="@+id/txt_jml_kategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_orange"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingBottom="2dp"
            android:text="9"
            android:textColor="@color/putih"
            android:textStyle="bold"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B5B5B5"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="7dp"/>

</LinearLayout>