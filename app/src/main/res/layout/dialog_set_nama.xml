<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah Customer"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_regular"
                android:textSize="20sp"
                android:textColor="@color/text"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linear_cari"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/edt_cari_wa"
                        android:hint="Nomor Whatsapp"
                        android:background="@drawable/bg_spinner"
                        android:padding="10dp"
                        android:inputType="phone"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginRight="10dp"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:layout_gravity="center"
                        android:text="cari"
                        android:textAllCaps="false"
                        android:id="@+id/btn_cari_customer"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/putih"
                        android:textStyle="bold"
                        android:background="@drawable/bg_btn_login"/>


                </LinearLayout>

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:id="@+id/progress"
                    android:visibility="gone"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recycler_data_pelanggan"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Tambah Customer"
                    android:textAllCaps="false"
                    android:id="@+id/btn_tambah_customer"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/putih"
                    android:textStyle="bold"
                    android:background="@drawable/bg_btn_login"
                    android:visibility="gone"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linear_tambah"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:id="@+id/edt_nama"
                    android:hint="Nama"
                    android:background="@drawable/bg_spinner"
                    android:padding="10dp"
                    android:inputType="textCapWords"
                    android:fontFamily="@font/poppins_regular"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nomor Whatsapp"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:id="@+id/edt_nomor"
                    android:hint="Nomor Whatsapp"
                    android:background="@drawable/bg_spinner"
                    android:padding="10dp"
                    android:inputType="phone"
                    android:fontFamily="@font/poppins_regular"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Lahir"
                    android:layout_marginTop="10dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:id="@+id/edt_tanggal_lahir"
                        android:hint="____-__-__"
                        android:background="@drawable/bg_spinner"
                        android:padding="10dp"
                        android:inputType="phone"
                        android:fontFamily="@font/poppins_regular"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:id="@+id/linear_tanggal"/>

                </RelativeLayout>

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:id="@+id/p_loading"
                    android:visibility="gone"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Simpan"
                    android:textAllCaps="false"
                    android:id="@+id/btn_simpan"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/putih"
                    android:textStyle="bold"
                    android:background="@drawable/bg_btn_login"
                    android:layout_marginTop="20dp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>